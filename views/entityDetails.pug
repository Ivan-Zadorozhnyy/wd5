doctype html
html(lang='en')
    head
        title Entity Details
        link(rel='stylesheet', href='/styles.css')
    body
        h1 Entity Details
        p Name: #{entity.name}
        p Description: #{entity.description}
        form(action='/delete/' + entity._id method='post')
            button(type="submit") Delete
        a(href="/edit/" + entity._id) Edit



